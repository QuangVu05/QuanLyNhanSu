<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống kê nhân sự</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Thống kê nhân sự</h2>

        <ul class="nav nav-tabs" id="statsTabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#overview">Tổng quan</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#genderStats">Theo giới tính</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#ageStats">Theo độ tuổi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#departmentStats">Theo phòng ban</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#monthlyStats">Theo năm tháng</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="overview">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Nhân viên</h5>
                                <p class="card-text" id="totalEmployees">120</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Phòng ban</h5>
                                <p class="card-text" id="totalDepartments">5</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Đang làm việc</h5>
                                <p class="card-text" id="activeEmployees">100</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-danger mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Đã nghỉ việc</h5>
                                <p class="card-text" id="inactiveEmployees">20</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="genderStats">
                <canvas id="genderChart" width="400" height="200"></canvas>
            </div>

            <div class="tab-pane fade" id="ageStats">
                <canvas id="ageChart" width="400" height="200"></canvas>
            </div>

            <div class="tab-pane fade" id="departmentStats">
                <canvas id="departmentChart" width="400" height="200"></canvas>
            </div>

            <div class="tab-pane fade" id="monthlyStats">
                <canvas id="monthlyChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new Chart(document.getElementById('genderChart'), {
                type: 'bar',
                data: {
                    labels: ['Nam', 'Nữ'],
                    datasets: [
                        {
                            label: 'Đang làm việc',
                            data: [50, 30],
                            backgroundColor: '#007bff'
                        },
                        {
                            label: 'Đã nghỉ việc',
                            data: [20, 20],
                            backgroundColor: '#ff6384'
                        }
                    ]
                }
            });

            new Chart(document.getElementById('ageChart'), {
                type: 'bar',
                data: {
                    labels: ['Dưới 25', '25-35', '35-45', 'Trên 45'],
                    datasets: [
                        {
                            label: 'Đang làm việc',
                            data: [20, 40, 25, 15],
                            backgroundColor: '#28a745'
                        },
                        {
                            label: 'Đã nghỉ việc',
                            data: [10, 10, 5, 5],
                            backgroundColor: '#dc3545'
                        }
                    ]
                }
            });

            new Chart(document.getElementById('departmentChart'), {
                type: 'bar',
                data: {
                    labels: ['Kế toán', 'Nhân sự', 'IT', 'Marketing', 'Kinh doanh'],
                    datasets: [
                        {
                            label: 'Đang làm việc',
                            data: [15, 12, 25, 20, 28],
                            backgroundColor: '#ffc107'
                        },
                        {
                            label: 'Đã nghỉ việc',
                            data: [5, 3, 5, 5, 2],
                            backgroundColor: '#dc3545'
                        }
                    ]
                }
            });

            new Chart(document.getElementById('monthlyChart'), {
                type: 'line',
                data: {
                    labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                    datasets: [
                        {
                            label: 'Đang làm việc',
                            data: [120, 118, 115, 113, 110, 108, 105, 103, 100, 98, 95, 93],
                            borderColor: '#007bff',
                            fill: false
                        },
                        {
                            label: 'Đã nghỉ việc',
                            data: [5, 7, 10, 12, 15, 17, 20, 22, 25, 27, 30, 32],
                            borderColor: '#dc3545',
                            fill: false
                        }
                    ]
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
