@model IEnumerable<QuanLyNhanSu.Models.LoaiCong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:20px; margin-bottom: 20px">
<h2 class="text-center">Quản lý loại công</h2>
<button class="btn btn-primary" onclick="showModal('@Url.Action("Create", "LoaiCongs")', 'Thêm loại công')">
    <i class="fas fa-save"></i> Thêm loại công
</button>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh sách loại công
    </div>
<table class="table  table-bordered table-hover table-sm card-body text-center">
    <thead class="table-info">
        <tr>
            <th>STT</th>
            <th>Tên Loại Công</th>
            <th>Hệ Số Lương</th>
            <th style="width: 12%;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.TenCong</td>
                <td>@item.HeSoLuong</td>
                <td text-nowrap p-1>
                    <div class="d-flex gap-1">
                    
                    <a class="btn btn-warning btn-sm" onclick="showModal('@Url.Action("Edit", "LoaiCongs", new { id = item.IdCong })', 'Chỉnh sửa thông tin công')"> <i class="fas fa-edit"></i> Sửa</a>
                    
                    <a asp-action="Delete" asp-route-id="@item.IdCong" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');"><i class="fas fa-trash"></i> Xóa</a>
                    </div>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
</div>

<!-- Modal dùng chung -->
<!-- Sửa tên modal thành modalForm -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- Nội dung Form sẽ được load từ AJAX -->
            </div>
        </div>
    </div>
</div>



