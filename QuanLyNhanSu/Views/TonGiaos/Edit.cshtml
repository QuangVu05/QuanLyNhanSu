@model QuanLyNhanSu.Models.TonGiao



<form data-ajax="true" action="@Url.Action("Edit", "TonGiaos")" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTG" />
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="TenTG" class="control-label"> <strong>Tên tôn giáo:</strong></label>
            <input asp-for="TenTG" class="form-control" />
            <span asp-validation-for="TenTG" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
    </div>
</form>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
